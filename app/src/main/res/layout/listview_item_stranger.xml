<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_margin="2.5dp"
    android:padding="10dp"
    android:background="@drawable/shadow_box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_header_title"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:id="@+id/category_image_event_list_item"
                android:transitionName="header_image"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_user_name"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:text="Marcel Judth"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_user_email"
                    android:textSize="15sp"
                    android:transitionName="text_view_profile"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>