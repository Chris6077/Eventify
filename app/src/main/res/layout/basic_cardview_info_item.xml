<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <!-- item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/cardiview_info_item_content"
        android:layout_margin="2.5dp"
        android:background="@drawable/shadow_box">

        <ImageView
            android:id="@+id/cardiview_info_item_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:transitionName="img_profile"
            android:layout_marginRight="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardiview_info_item_header_text"
                android:textSize="20sp"
                android:transitionName="text_view_profile"/>

            <TextView
                android:id="@+id/cardiview_info_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>